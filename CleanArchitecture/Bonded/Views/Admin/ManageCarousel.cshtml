@model List<Bonded.Domain.CarousalImage>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <title>Manage Carousel</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            background-color: linen;
        }

        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .main-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            padding: 20px;
        }

        .carousel-container {
            background-color: #fff;
            padding: 30px;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.3);
            margin-top: 30px;
            width: 80%;
            border-radius: 12px;
        }

            .carousel-container h2 {
                font-weight: bold;
                margin-bottom: 20px;
                text-align: center;
                color: #333;
            }

        .btn-primary {
            background-color: black;
            border: none;
            font-weight: bold;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: #004080;
                color: #fff;
            }

        .slot {
            margin-bottom: 15px;
        }

            .slot img,
            .slot video {
                border-radius: 8px;
                max-width: 150px;
                max-height: 150px;
                object-fit: cover;
                margin: 5px;
            }

            .slot label {
                font-weight: bold;
                margin-bottom: 5px;
            }

        .upload-container input[type="file"] {
            padding: 8px;
        }

        /* Styling for displaying uploaded files in one row */
        .uploaded-files {
            display: flex;
            flex-wrap: nowrap;
            overflow-x: auto;
            gap: 10px;
            margin-top: 20px;
        }

            .uploaded-files img,
            .uploaded-files video {
                width: 100px;
                height: 100px;
                object-fit: cover;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="carousel-container">
            <h2>Manage Carousel</h2>

            <form asp-action="ManageCarousel" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <h5>Upload Carousel Files</h5>
                    <div class="slot">
                        <label for="file-slot">Upload Image/Video for Carousel (Multiple)</label>
                        <!-- Add 'multiple' attribute to accept multiple files -->
                        <input type="file" name="files" class="form-control" accept="image/*,video/*" multiple />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Upload Files</button>
            </form>

            <div class="mt-4">
                <h5>Uploaded Files in Carousel</h5>
                <div class="uploaded-files">
                    @foreach (var image in Model)
                    {
                        <div>
                            @if (image.ImageUrl.EndsWith(".mp4") || image.ImageUrl.EndsWith(".webm"))
                            {
                                <video controls>
                                    <source src="@image.ImageUrl" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            }
                            else
                            {
                                <img src="@image.ImageUrl" class="img-thumbnail" />
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
