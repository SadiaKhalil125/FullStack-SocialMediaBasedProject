@model Bonded.Domain.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.UserName | Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&family=Poppins:wght@600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="css/site.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        footer {
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        .profile-tabs {
            border-top: 1px solid #dbdbdb;
            display: flex;
            justify-content: center;
            margin-bottom: 0;
        }

        .tab {
            height: 52px;
            display: flex;
            align-items: center;
            margin-right: 60px;
            font-size: 12px;
            font-weight: 600;
            color: #8e8e8e;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
        }

            .tab:last-child {
                margin-right: 0;
            }

            .tab.active {
                color: #262626;
                border-top: 1px solid #262626;
                margin-top: -1px;
            }

            .tab i {
                margin-right: 6px;
                font-size: 16px;
            }
        body {
            background-color: #fafafa;
            color: #262626;
            /* font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; */
            font-family: 'Roboto', sans-serif;
        
        }

        .profile-container {
            max-width: 935px;
            margin: 80px auto 40px;
            padding: 0 20px;
        }

        .profile-header {
            display: flex;
            margin-bottom: 40px;
        }

        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            /* margin-right: 50px; */
            margin-left:50px;
            border: 1px solid #e6e6e6;
        }

        .profile-info {
           margin-left:90px;
           flex:1;
           align-items:flex-start;
        }

        .profile-username {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
        }

            .profile-username h2 {
                font-size: 28px;
                font-weight: 300;
                margin-right: 20px;
                margin-bottom: 0;
              
            }

        .profile-stats {
            display: flex;
            margin-bottom: 20px;
        }

        .profile-stat {
            margin-right: 30px;
            font-size: 16px;
        }

            .profile-stat strong {
                font-weight: 600;
            }

        .profile-bio {
            margin-bottom: 20px;
        }

            .profile-bio p {
                margin-bottom: 5px;
                text-align: center;
            }

        .btn-custom {
            background-color: #000;
            color: #fff;
            font-weight: 600;
            padding: 5px 15px;
            border-radius: 4px;
            border: none;
        }

            .btn-custom:hover {
                background-color: #333;
                color: #fff;
            }

        .posts-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-top: 40px;
        }

        .post {
            aspect-ratio: 1/1;
            background-color: #efefef;
            position: relative;
        }

            .post img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Responsive adjustments */
        /* media (max-width: 768px) { */
        /*     .profile-header */

        /* { */
        /*     flex-direction: column; */
        /*     align-items: center; */
        /*     text-align: center; */
        /* } */

        .profile-picture {
            margin-right: 0;
            margin-bottom: 20px;
        }

        .profile-username {
            justify-content: center;
        }

        .profile-stats {
            justify-content: center;
        }

        }
    </style>
</head>
<body>
    <div class="profile-container">
        <!-- Profile Header -->
        <div class="profile-header">
            <img src="@Model.ProfilePicture" alt="Profile Picture" class="profile-picture">

            <div class="profile-info " style="display:flex; flex-direction:column; align-content:flex-start">
                <div class="profile-username">
                    <h2 >@Model.UserName</h2>
                    <a href="@Url.Action("Profile", "User")"  class="btn btn-custom me-2">Edit Profile</a>
                    <a href="/Post/CreatePost" class="btn btn-custom " >Create Post</a>
                </div>
              
                <div class="profile-stats">
                    <div class="profile-stat">
                        <a style="text-decoration:none; color:black" href="@Url.Action("ShowFollower", "Follow", new { userId = @Model.Id })">
                        <strong>@Model.FollowerCount</strong> followers
                        </a>
                    </div>
                    <div class="profile-stat">
                        <a style="text-decoration:none; color:black" href="@Url.Action("ShowFollowing", "Follow", new { userId = @Model.Id })">
                        <strong>@Model.FollowingCount</strong> following
                        </a>
                    </div>
                </div>

                <div class="profile-bio">
                    <p>@Model.Bio</p>
                </div>
            </div>
        </div>
        <div class="profile-tabs">
            <div class="tab active">
                <i class="fas fa-th"></i>
                Posts
            </div>
            @* <div class="tab"> *@
            @*     <i class="fas fa-bookmark"></i> *@
            @*     Saved *@
            @* </div> *@
            @* <div class="tab"> *@
            @*     <i class="fas fa-tag"></i> *@
            @*     Tagged *@
            @* </div> *@
        </div>

        <!-- Posts Grid -->
        <div class="posts-grid">
            @await Component.InvokeAsync("ShowPosts")
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>